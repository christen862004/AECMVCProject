<h1>Edit</h1>
<form method="post" action="/Employee/SaveEdit/@Model.Id">

    <div>
        <!--Tag Helper-->
        <label asp-for="Address"></label>
        <input  class="form form-control" asp-for="Address" />

        


        <!--HTML Helper-->
